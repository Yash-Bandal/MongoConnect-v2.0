<div class="container">

    <h1>Retrieve Data from MongoDB Backend</h1>
</div>
<div class="container" style="width: 25vw;">

    <div class="card mb-4 rounded-3 shadow-sm">

        <div class="card-header py-3">
            <h4 class="my-0 fw-normal">Retrieve Data</h4>
        </div>
        <div class="form-container">

            <form id="retrieveForm" method="post" action="/retrieve">
                <div class="form-group mb-3">
                    <label for="originalRBT" class="form-label fw-semibold">Enter RBT to Retrieve Data:</label>
                    <input type="number" id="originalRBT" name="originalRBT" class="form-control" required>
                </div>

                <div class="text-center my-3">
                    <button type="submit" class="btn btn-primary">Retrieve Data</button>
                </div>
            </form>
        </div>

    </div>

    
</div>

<!-- Display retrieved data here -->

<% if (retrievedData) { %>
    <div class="container" style="margin-top: 30px; max-width: 600px;">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-3"  style="background-color: #00d2ff;">
          <h4 class="my-0 fw-normal">Retrieved Document</h4>
        </div>
        <div class="form-container">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>UserName:</strong> <%= retrievedData.UserName %></li>
            <li class="list-group-item"><strong>RBT:</strong> <%= retrievedData.RBT %></li>
            <li class="list-group-item"><strong>Division:</strong> <%= retrievedData.division %></li>
            <li class="list-group-item"><strong>Email:</strong> <%= retrievedData.mail %></li>
            <li class="list-group-item"><strong>Content:</strong> <%= retrievedData.content %></li>
          </ul>
        </div>
      </div>
    </div>
  <% } else if (typeof retrievedData !== 'undefined') { %>
    <p style="color: rgb(0, 0, 0); text-align: center; margin-top: 20px;">Enter RBT To fetch Data.</p>
  <% } %>
  